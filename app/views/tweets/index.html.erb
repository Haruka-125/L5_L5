<% @tweets.each do |e| %>
    <%= e.message %>
    <%= link_to '削除', "/tweets/#{e.id}" , data: {turbo_method: :delete } %>
    <% if e.liked?(current_user) %>
        <%= link_to 'いいね削除' , like_path(e), data: {turbo_method: :delete } %>
    <% else %>
        <%= link_to 'いいね' , likes_path(tweet_id: e.id), data: {"turbo_method": :post} %>
    <% end %>
    <br>
<% end %>

<br>
<% if current_user %>
    <%= link_to "ツイートする" , new_tweet_path %>
<% end %>
